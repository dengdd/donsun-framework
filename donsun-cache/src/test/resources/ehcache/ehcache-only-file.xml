<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="fileCache">

    <diskStore path="c:/ehcache/file" />

    <!-- DefaultCache setting. -->
    <defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="600"
        overflowToDisk="false" maxEntriesLocalDisk="100000" />

    <cache name="fileCache" maxElementsInMemory="1" eternal="true" timeToIdleSeconds="1200" timeToLiveSeconds="1800"
        overflowToDisk="true">
    </cache>

</ehcache>
